@using GAFPAY.ViewModel
@model List<OfficerIntake>

@{
    ViewBag.Title = "Officer Cadet Promotion";
}


<div class="page-header">
    <h3 class="page-title"> @ViewBag.Title </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a href="@Url.Action("Index","Home")"> Dashboard</a> </li>
            <li class="breadcrumb-item active"> @ViewBag.Title</> </li>
        </ol>
    </nav>
</div>

<div class="main-page">

    <br /><br />
    <table class="table table-striped" id="tableX">
        <thead>
            <tr>

                <th></th>
                <th>Commission Type</th>
                <th>Intake Name</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td></td>
                <td>@item.CommissionTypeName</td>
                <td>@item.OfficerIntakeName</td>
                <td class="text-center"> 
                    <a class="" onclick="removeItem(@item.OfficerIntakeID,'@item.OfficerIntakeName')"><i class="icon-trophy menu-icon"></i></a> 
                </td>

            </tr>
        }
    </table>

</div>
<script src="~/Scripts/tableList.js"></script>
<script>

    function removeItem(X,Y) {
        swal({
            title: "Are you sure",
            text: "Promote " + Y + "?",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: "Promote",
            showLoaderOnConfirm: true,
            preConfirm: function () {
                return new Promise(function (resolve) {
                    $.ajax({
                        url: "@Url.Action("IntakePromotion","Settings")",
                        type: 'POST',
                    data: 'id=' + X,
                    dataType: 'json'
                })
                    .done(function (response) {
                        swal({
                            title: "Successful",
                            text: response.Message+ " successful.",
                            type: "success",
                            showCancelButton: false,
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "OK",
                            timer: 5000,
                            closeOnConfirm: true


                        })
                        window.location.href = '@Url.Action("IndexIntakePromotion", "Settings")';

                    })
                    .fail(function () {
                        swal('Oops...', 'Something went wrong with the processing. Try again !', 'error');
                    });
            });
    },
    allowOutsideClick: false
    });
    }


</script>