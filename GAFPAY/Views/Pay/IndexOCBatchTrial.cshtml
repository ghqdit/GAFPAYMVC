@using GAFPAY.ViewModel
@model List<OCBatchTrial>

@{
    ViewBag.Title = "Officer Cadet Trial Pay";
}


<div class="page-header">
    <h3 class="page-title"> @ViewBag.Title </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a href="@Url.Action("Index","Home")"> Dashboard</a> </li>
            <li class="breadcrumb-item active"> @ViewBag.Title</> </li>
        </ol>
    </nav>
</div>

<div class="main-page">
    <a href="@Url.Action("CreateOCBatchTrial")" class="btn btn-primary"><i class="fas fa-plus" aria-hidden="true"></i> Add New</a>
    <br /><br />
    <table class="table table-striped" id="tableX">
        <thead>
            <tr>

                <th></th>
                <th>Pay Date</th>
                <th></th>


            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td></td>
                <td>@item.PayDate.ToString("MMMM yyyy")</td>
                <td class="text-center">
                    <a class="" href="@Url.Action("OCTrialDetails","Pay",new {date=item.PayDate} )"><i class="icon-calculator menu-icon"></i></a> |
                    <a class="" onclick="removeItem('@item.PayDate', '@item.PayDate.ToString("MMMM yyyy")')"><i class="fas fa-trash-alt"></i></a>

                </td>
            </tr>
        }
    </table>

</div>
<script src="~/Scripts/tableList.js"></script>
<script>

    function removeItem(X,Y) {
        swal({
            title: "Are you sure",
            text: "Delete Trial Pay for Officer Cadets for the month " + Y + "?",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: "Delete",
            showLoaderOnConfirm: true,
            preConfirm: function () {
                return new Promise(function (resolve) {
                    $.ajax({
                        url: "@Url.Action("RemoveMonthOCTrial","Pay")",
                        type: 'POST',
                    data: 'date=' + X,
                    dataType: 'json'
                })
                    .done(function (response) {
                        swal({
                            title: "Successful",
                            text: response.Message+ " deleted successfully",
                            type: "success",
                            showCancelButton: false,
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "OK",
                            timer: 5000,
                            closeOnConfirm: true


                        }).then(function () {
                            window.location.href = '@Url.Action("IndexOCBatchTrial", "Pay")';

                        });

                    })
                    .fail(function () {
                        swal('Oops...', 'Something went wrong with the processing. Try again !', 'error');
                    });
            });
    },
    allowOutsideClick: false
    });
    }


</script>