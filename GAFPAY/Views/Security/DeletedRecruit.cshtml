@using GAFPAY.ViewModel
@model List<Recruit>

@{
    ViewBag.Title = "Deleted Recruit";
}


<div class="page-header">
    <h3 class="page-title"> @ViewBag.Title </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a href="@Url.Action("Index","Home")"> Dashboard</a> </li>
            <li class="breadcrumb-item active"> @ViewBag.Title</> </li>
        </ol>
    </nav>
</div>

<div class="main-page"> 
    <br /><br />
    <table class="table table-striped" id="tableX">
        <thead>
            <tr>

                <th></th>
                <th>Svc Number</th>
                <th>Name</th>
                <th>Service</th>
                <th>Course</th>

                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td></td>
                <td>@item.ServiceNumber</td>
                <td>@item.RankNameShort @item.Surname  @item.Othername </td>
                <td>@item.ServiceName </td>
                <td>@item.RCName </td>
                <td class="text-center"> 

                </td>
                 
            </tr>
        }
    </table>

</div>
<script src="~/Scripts/tableList.js"></script>
<script>

    function removeItem(X,Y,Z) {
        swal({
            title: "Are you sure",
            text: "Delete " + Y + " " + Z + " ?",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: "Delete",
            showLoaderOnConfirm: true,
            preConfirm: function () {
                return new Promise(function (resolve) {
                    $.ajax({
                        url: "@Url.Action("RemoveRecruit","Staff")",
                        type: 'POST',
                    data: 'id=' + X,
                    dataType: 'json'
                })
                    .done(function (response) {
                        swal({
                            title: "Successful",
                            text: response.Message+ " deleted successfully",
                            type: "success",
                            showCancelButton: false,
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "OK",
                            timer: 5000,
                            closeOnConfirm: true


                        })
                        window.location.href = '@Url.Action("IndexRecruit", "Staff")';

                    })
                    .fail(function () {
                        swal('Oops...', 'Something went wrong with the processing. Try again !', 'error');
                    });
            });
    },
    allowOutsideClick: false
    });
    }



